<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GTimerActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/ll_local_main"
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:onClick="selectActions"
                android:tag="goBack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/icon_goback"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_weight=".8"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:textSize="30dp"
                android:text="@string/tv_game_timer" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_game_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@color/escape_vivid_purple"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/iv_game_timer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <!--    Top bar that supports lateral menu-->
    <include
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--    Lateral menu-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/lateralview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:translationZ="1dp"
        app:menu="@menu/lateral_menu_resources"
        />

</androidx.drawerlayout.widget.DrawerLayout>