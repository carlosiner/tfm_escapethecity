<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/escape_back_light_purple"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >
    <!--    TODO  -->

    <LinearLayout
        android:id="@+id/menu_profile_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

<!--    Picture-->
    <ImageView
        android:id="@+id/menu_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:srcCompat="@tools:sample/avatars"/>

<!--    Username -->
    <TextView
        android:id="@+id/menu_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:text="@string/lateralmenu_profile_name"/>

<!--    Email-->
    <TextView
        android:id="@+id/menu_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:text="@string/lateralmenu_profile_email"/>

</LinearLayout>