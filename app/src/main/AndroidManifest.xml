<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uoc.tfm.escapethecity">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_run_fast"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_run_fast"
        android:supportsRtl="true"
        android:theme="@style/Theme.EscapeTheCity">
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".RecoveryActivity"
            android:exported="false" /> <!-- Set Registration as initial view -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EscapeTheCity.NoActionBar" />
    </application>

</manifest>