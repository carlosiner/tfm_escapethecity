<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:id="@+id/ll_game_investigation_popup_Check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        Response Title-->
        <TextView
            android:id="@+id/tv_game_investigation_correct_continue"
            android:layout_marginVertical="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:textSize="50dp"
            android:text="@string/tv_game_investigation_correct_continue" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/g_inv_correct"
            />

        <!--        Response Subtitle-->
        <TextView
            android:id="@+id/tv_game_investigation_check_title"
            android:layout_marginVertical="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/tv_game_investigation_correct_continue_subtitle" />

        <!--        Buttons PopUp Continue-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <!--            Check-->
            <Button
                android:id="@+id/b_game_investigation_correct_continue"
                android:tag="b_game_investigation_correct_continue"
                android:onClick="selectActions"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:text="@string/b_game_investigation_correct_continue"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>