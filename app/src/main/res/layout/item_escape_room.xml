<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlDummyEscapeRoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:onClick="e_list_actions"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/imDummy"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/game_el_secreto"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imDummy"
            android:text="@string/tv_h_escapeName"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imDummy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>