<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_g_item"
        android:tag="t_a_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="selectActions"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_game_item_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:src="@mipmap/ic_launcher"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_game_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_game_item_name"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/iv_game_item_image"
            app:layout_constraintTop_toBottomOf="@id/iv_game_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>